<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background = "@drawable/bg1"
    tools:context=".about"
    tools:layout_editor_absoluteX="-93dp"
    tools:layout_editor_absoluteY="-12dp">

    <ImageView
        android:id="@+id/about_editor"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/about_editor" />


    <TextView
        android:id="@+id/text_1"
        android:layout_width="313dp"
        android:layout_height="250dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="172dp"
        android:textStyle="bold"
        android:text="I confirm that I understand what plagiarism is and have read and
understood the section on Assessment Offences in the Essential
Information for Students. The work that I have submitted is
entirely my own. Any work from other authors is duly referenced
and acknowledged."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/about_editor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/west_id"
        android:layout_width="299dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="20210342 / w1867098"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/about_editor"
        app:layout_constraintTop_toBottomOf="@+id/name_editor" />

    <TextView
        android:id="@+id/name_editor"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="56dp"
        android:text="Banuji Liyanwala"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/about_editor"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
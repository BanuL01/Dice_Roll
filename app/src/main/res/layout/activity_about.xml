<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:background = "@drawable/bg1"

    tools:context=".about">



    <ImageView
        android:id="@+id/about_editor"
        android:layout_width="150dp"
        android:layout_height="233dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/about_editor" />

    <TextView
        android:id="@+id/name_editor"
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="55dp"
        android:text="Banuji Liyanwala"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/about_editor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stu_id"
        android:layout_width="192dp"
        android:layout_height="30dp"
        android:layout_marginStart="6dp"
        android:text="w1867098"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/about_editor"
        app:layout_constraintTop_toBottomOf="@+id/name_editor" />

    <TextView
        android:id="@+id/west_id"
        android:layout_width="195dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:text="20210342"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/about_editor"
        app:layout_constraintTop_toBottomOf="@+id/stu_id" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="321dp"
        android:layout_height="197dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="\n \nI confirm that I understand what plagiarism is and have read and
understood the section on Assessment Offences in the Essential
Information for Students. The work that I have submitted is
entirely my own. Any work from other authors is duly referenced
and acknowledged."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_editor" />

</androidx.constraintlayout.widget.ConstraintLayout>